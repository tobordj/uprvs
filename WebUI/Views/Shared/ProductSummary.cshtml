@model uh365898_db.Domain.Entities.Product

@{
    ViewBag.Title = "УПР: все товары";

}






 
     <div class="span4 element category01" data-category="category01" style="margin-left: 15px;  height:340px;    outline: 2px solid #ede9e9;">
         <div class="product_item" style="height:100%;">

             @if (Model.ImageData != null)
             {
                 <div class="hover_img">

                     <a href="@Url.Action("Store", new { Model.ProductID })"><p style="text-align: center;"><img style="align-content:center" width="150" height="150" src="@Url.Action("GetImage", "Product", new { Model.ProductID })" alt="" /></p></a>

                 </div>
             }
             else
             {

                <div class="hover_img">
                    <a href="@Url.Action("Store", new { Model.ProductID })"><p style="text-align: center;"><img style="align-content:center" width="150" height="150" src="~/Content/themes/img/no_image.jpg" alt="" /></p></a>
                </div>
                 
             }


             <div class="item_description" style="height:35%;">
                 <div class=" descr">

                     <div class="prodname">@Html.ActionLink(Model.Name, "Store", new { Model.ProductID, })</div>
                     <p style="margin-bottom:3%"></p>
                     <div class="a7">
                         @Model.Description

                     </div>

                 </div>
             </div>
             <p style="margin-bottom:3%"></p>
             <div class="item_description" style="height:10%;">
                 <table style="width:100%;">
                     <tr>
                         <td>
                             <div class="prodprice">@Model.Price.ToString("") грн.</div>
                         </td>
                         <td>
                             <a href="@Url.Content("~/Nav/Question/")" style=""><span title="Вопрос технологу" class="icon32  icon-contacts"></span></a>
                         </td>
                         <td>
                             @using (Html.BeginForm("AddToCart", "Cart"))
                             {
                             @Html.HiddenFor(x => x.ProductID)
                             @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                             <input type="submit" class="mybutton" value="Заказать!">
                             }

                         </td>
                     <tr>

                 </table>
             </div>

         </div>

</div>







