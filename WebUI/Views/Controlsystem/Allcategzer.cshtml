@model IEnumerable<uh365898_db.Domain.Entities.Categzer>

@{
    ViewBag.Title = "Административная панель: подкатегории товары";
    Layout = "~/Views/Shared/_ControlsystemLayout.cshtml";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Content("~/Controlsystem/Mainpage")">Главная</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="#">Разделы товара   </a>
        </li>
    </ul>
</div>

<div class="row-fluid sortable ui-sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-th-list"></i> &nbsp;Разделы товара</h2>

        </div>

        <div class="box-content">
            <div class="control-group">

                @Html.ValidationSummary()

                @if (TempData["message"] != null)
                {
                    <div class="alert alert-info"><p>@TempData["message"]</p></div>
                }
                <a class="btn" href="@Url.Action("Addcategzer", "Controlsystem")"><i class="icon-plus"></i> Добавить раздел</a>
            </div>



            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th scope="col">№</th>
                        <th scope="col">Название раздела товара</th>

                        <th scope="col"></th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-center">@item.CategzerID</td>
                            <td class="align-center">@item.Name </td>


                            <td>
                                <a class="btn  btn-mini" href="@Url.Action("Edcategzer", new { item.CategzerID })"><span title="Редактировать товар" class="icon icon-blue icon-pin" /></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>
</div>

