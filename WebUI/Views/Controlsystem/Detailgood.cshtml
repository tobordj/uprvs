@using uh365898_db.Domain.Concrete
@using uh365898_db.Domain.Entities
@model Product
@{
    ViewBag.Title = "УПР: Добавление товара";
    Layout = "~/Views/Shared/_ControlsystemLayout.cshtml";
}


<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Content("~/Controlsystem/Mainpage")">Главная</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="@Url.Content("~/Controlsystem/Goods")">Каталог товаров</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="#"> Информация о товаре</a>
        </li>
    </ul>
</div>

<div class="row-fluid sortable ui-sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>

            <h2><i class="icon-edit"></i> Информация о товаре "@Model.Name"</h2>
        </div>
        <div class="box-content">
            <form class="form-horizontal">

                <fieldset>

                    @Html.DisplayFor(model => model.ProductID)</p>

                    <div class="control-group">
                        <label class="control-label">Изображение</label>
                        <div class="controls">
                            @if (Model.ImageData == null)
                            {
                                @:Отсутствует
                                                }
                            else
                            {
                                <img width="150" height="150" src="@Url.Action("GetImage", "Product", new { Model.ProductID })" />
                            }


                        </div>
                    </div>

                    
                    <div class="control-group">
                        <label class="control-label">Название товара</label>
                        <div class="controls">
                            <p class="help-block">@Html.DisplayFor(model => model.Name, new { @type = "text", @class = "span6 typeahead", @id = "typeahead" })</p>
                        </div>
                    </div>


                    <div class="control-group">
                        <label class="control-label">Раздел </label>
                        <div class="controls">
                            <p class="help-block">
                                @Html.DisplayFor(model => model.Categzer.Name)
                            </p>
</div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Категория товара</label>
                        <div class="controls">
                            <p class="help-block">
                                @Html.DisplayFor(model => model.Categone.Name)
                            </p>
                         </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Подкатегория товара</label>
                        <div class="controls">
                            <p class="help-block">
                                @Html.DisplayFor(model => model.Categtw.Name)
                            </p>
</div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Производитель товара</label>
                        <div class="controls">
                            <p class="help-block">
                                @Html.DisplayFor(model => model.Producer.Name)
                            </p>

</div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Код товара</label>
                        <div class="controls">
                            <p class="help-block">
                                @Html.DisplayFor(model => model.ProdcodeID)
                            </p>

</div>
                    </div>


                    <div class="control-group">
                        <label class="control-label"> URL адрес товара</label>
                        <div class="controls">
                            <p class="help-block">
                                @Html.DisplayFor(model => model.ImgUrl)
                            </p>

</div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Цена товара</label>
                        <div class="controls">
                            <p class="help-block">
                                @Html.DisplayFor(model => model.Price)
                            </p>
</div>
                    </div>



                    <div class="control-group">
                        <label class="control-label">Рекомендуем</label>
                        <div class="controls">
                            <p class="help-block">
                               ​@Html.CheckBoxFor(x => x.Recomend)
                            </p>
                        </div>
                    </div>


                   




                    <div class="control-group">
                        <label class="control-label">Краткое описание</label>
                        
                            <div class="controls"> @Html.Raw(this.Model.Description)</div>

                       </div>


                    <div class="control-group">
                        <label class="control-label">Полное описание</label>
                        
                            <div class="controls"> @Html.Raw(this.Model.Alldescription)   </div>
                      </div>

                    <div class="control-group">
                        <label class="control-label">Упаковка</label>
                        <div class="controls">
                            <p class="help-block">​@Html.DisplayFor(model => model.Packing.Name, new { @class = "span7" })
                      
                            </p>
                        </div>
                    </div>


                   

                    <div class="control-group">
                        <label class="control-label">Применение</label>

                        <div class="controls"><p class="help-block">
                        <ul>
                        @foreach (Applying c in Model.Applyings)
                      {
                        <li>@c.Name</li>
                          }
                          </ul>
                    </p>
                           </div>
                    </div>


                    <div class="control-group">
                        <label class="control-label">Технические характеристики</label>
                     
                    <div class="controls"><p class="help-block">
                     <ul>
                      @foreach (Techcharacter c in Model.Techcharacters)
                          {
                          <li>@c.Name</li>
                          }
                      </ul>
                   </p>
                       </div>
                   </div>



                  <div class="control-group">
                    <label class="control-label">Свойства</label>
                      <div class="controls"><p class="help-block">

                          <ul>
                             @foreach (Proper c in Model.Propers)
                       {
                        <li>@c.Name</li>
                        }
             </ul>
             </p>
         </div>
         </div>

    </fieldset>

    </form>
    </div>

    </div>
</div>

