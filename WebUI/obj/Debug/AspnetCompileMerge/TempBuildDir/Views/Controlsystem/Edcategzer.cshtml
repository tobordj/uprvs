@using uh365898_db.Domain.Concrete
@using uh365898_db.Domain.Entities
@model Categzer

@{
    ViewBag.Title = "УПР: Редактирование раздела" + @Model.Name;
    Layout = "~/Views/Shared/_ControlsystemLayout.cshtml";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Content("~/Controlsystem/Mainpage")">Главная</a> <span class="divider">/</span>
        </li>

        <li>
            <a href="@Url.Content("~/Controlsystem/Allcategzer")">Редактирование раздела</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="#"> Редактирование раздела</a>
        </li>
    </ul>
</div>

<div class="row-fluid sortable ui-sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>

            <h2><i class="icon-edit"></i> Редактирование раздела"@Model.Name"</h2>
        </div>
        <div class="box-content">

            @using (Html.BeginForm("Edcategzer", "Controlsystem", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {

                <fieldset>
                    <form id="ajax-contact-form">
                        <div class="control-group">

                            @Html.ValidationSummary(true)
                            @Html.AntiForgeryToken()

                            @if (TempData["message"] != null)
                            {
                                <div class="alert alert-info"><p>@TempData["message"]</p></div>
                            }
                        </div>

                        @Html.HiddenFor(model => model.CategzerID)



                        <div class="control-group">
                            <label class="control-label">Код товара</label>
                            <div class="controls">

                                @Html.EditorFor(x => x.Name)

                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">Код секции</label>
                            <div class="controls">
                                @Html.EditorFor(x => x.SectoneID, new { @type = "text", @class = "span6 typeahead", @id = "typeahead" })
                            </div>
                        </div>



                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">Сохранить</button>
                            <button class="btn">@Html.ActionLink("Отмена", "Allcategzer")</button>
                        </div>

                    </form>
                </fieldset>


            }
        </div>
    </div>
</div>

