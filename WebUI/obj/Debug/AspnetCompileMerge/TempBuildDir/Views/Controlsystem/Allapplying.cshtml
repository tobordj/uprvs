@model IEnumerable<uh365898_db.Domain.Entities.Applying>

@{
    ViewBag.Title = "Административная панель: все товары";
    Layout = "~/Views/Shared/_ControlsystemLayout.cshtml";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Content("~/Controlsystem/Mainpage")">Главная</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="#">Применение товара</a>
        </li>
    </ul>
</div>

<div class="row-fluid sortable ui-sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-th-list"></i> &nbsp;Применение товара</h2>

        </div>

        <div class="box-content">
            <div class="control-group">

                @Html.ValidationSummary()

                @if (TempData["message"] != null)
                {
                    <div class="alert alert-info"><p>@TempData["message"]</p></div>
                }
                <a class="btn" href="@Url.Action("Addapplying", "Controlsystem")"><i class="icon-plus"></i> Добавить применение товара</a>
            </div>



            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th scope="col">№</th>
                        <th scope="col">Применение товара</th>
                        <th scope="col"></th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-center">@item.ApplyingID</td>
                            <td class="align-center">@item.Name</td>

                         
                            <td>
                                @using (Html.BeginForm("DelApplying", "Controlsystem"))
                                {
                                    @Html.Hidden("ApplyingID", item.ApplyingID)  <button class="btn btn-mini btn-danger" type="submit"><i class="icon-remove icon-white"></i></button>                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>
</div>
