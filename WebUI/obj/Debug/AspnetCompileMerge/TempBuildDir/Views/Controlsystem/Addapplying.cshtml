@model uh365898_db.Domain.Entities.Applying

@{
    ViewBag.Title = "УПР: Добавление  применения товара";
    Layout = "~/Views/Shared/_ControlsystemLayout.cshtml";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Content("~/Controlsystem/Mainpage")">Главная</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="@Url.Content("~/Controlsystem/Allapplying")">Применения товара</a><span class="divider">/</span>
        </li>
        <li>
            <a href="#"> Добавление  применения товара</a>
        </li>
    </ul>
</div>

<div class="row-fluid sortable ui-sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>

            <h2><i class="icon-edit"></i> Добавление  применения товара</h2>
        </div>
        <div class="box-content">

            @using (Html.BeginForm("Addapplying", "Controlsystem", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {

                <fieldset>

                    <div class="control-group">
                        @Html.ValidationSummary()

                        @if (TempData["message"] != null)
                        {
                            <div class="alert alert-info"><p>@TempData["message"]</p></div>
                        }
                    </div>
                          @Html.HiddenFor(x => x.ApplyingID)

                    <div class="control-group">
                        <label class="control-label">Название категории</label>
                        <div class="controls">
                            @Html.EditorFor(x => x.Name, new { @type = "text", @class = "span6 typeahead", @id = "typeahead" })
                        </div>
                    </div>




                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                        <button class="btn">@Html.ActionLink("Отмена", "AllApplying")</button>
                    </div>
                </fieldset>


            }
        </div>
    </div>
</div>


