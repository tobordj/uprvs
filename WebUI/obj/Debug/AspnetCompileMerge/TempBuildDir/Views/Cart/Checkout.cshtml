@model uh365898_db.Domain.Entities.Shipping
@using BotDetect.Web.UI.Mvc;
@{
    ViewBag.Title = "УПР: Оформление заказа";
}



<div class="row-fluid">
    <div class="span12">
        <div class="stepmenu">
            <ul class="breadcrumb">
                <li><a href="~/">Главная </a><span class="divider">/</span></li>
                <li><a href="~/Каталог">Каталог</a><span class="divider">/</span></li>

                <li class="active"> Оформление заказа</li>

            </ul>
        </div>
    </div>
</div>


            <div class="row">
                <div class="span10">
                   
                    <div class="social-box">
                        <div class="header"><span class="icon32  icon-arrowstop-e"></span>Оформление заказа</div>
                    </div>
                    <div class="contact_form">


                        @using (Html.BeginForm())
                        { @Html.ValidationSummary()
                          @Html.AntiForgeryToken()
                            <div id="fields">
                                <form id="ajax-contact-form">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "span7", @type = "text", @placeholder = "Имя/Название организации" })
                                    @Html.TextBoxFor(x => x.City, new { @class = "span7", @type = "text", @placeholder = "Город" })
                                    @Html.TextBoxFor(x => x.State, new { @class = "span7", @type = "text", @placeholder = "Район" })
                                    @Html.TextBoxFor(x => x.Zip, new { @class = "span7", @type = "text", @placeholder = "Почтовый индекс" })
                                    @Html.TextBoxFor(x => x.Phone, new { @class = "span7", @type = "text", @placeholder = "Телефон" })
                                    @Html.TextBoxFor(x => x.Email, new { @class = "span7", @type = "text", @placeholder = "Электронная почта" })
                                    @Html.TextBoxFor(x => x.Address, new { @class = "span7", @type = "text", @placeholder = "Адрес" })
                                    @Html.EditorFor(x => x.Message)
                                    <div class="clear"></div>
                                    @{ MvcCaptcha sampleCaptcha = new MvcCaptcha("SampleCaptcha"); }
                                    @Html.Captcha(sampleCaptcha)
                                    @Html.TextBox("CaptchaCode")
                                    <div class="clear"></div>

                                    <p align="center"> <input class="mybutton" type="submit" value="Подтвердить заказ" /> </p>

                                </form>
                                
                            </div>

                        }
                    </div>



                    </div>
                    </div>
