@model IEnumerable<uh365898_db.Domain.Entities.Order>
@{
    ViewBag.Title = "УПР: Перечень товаров";
    Layout = "~/Views/Shared/_ControlsystemLayout.cshtml";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Content("~/Controlsystem/Mainpage")">Главная</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="#">Список заказанных товаров</a>
        </li>
    </ul>
</div>



<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-user"></i> Перечень заказанных товаров</h2>
        </div>
        <div class="box-content">
            <div class="control-group">
                @Html.ValidationSummary()

                @if (TempData["message"] != null)
                {
                    <div class="alert alert-info"><p>@TempData["message"]</p></div>
                }
            </div>

            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th scope="col">№ заказа</th>
                        <th scope="col">Дата </th>
                        <th scope="col">Имя заказчика</th>
                        <th scope="col">Название товара</th>
                        <th scope="col">Количество</th>
                        <th scope="col">Цена</th>

                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShippingShippingID)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.DateAdded)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Shipping.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Prodname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><!--/span-->
</div><!--/row-->
