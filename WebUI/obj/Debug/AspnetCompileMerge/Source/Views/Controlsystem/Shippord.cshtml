@model IEnumerable<uh365898_db.Domain.Entities.Shipping>

@{
    ViewBag.Title = "Административная панель: все товары";
    Layout = "~/Views/Shared/_ControlsystemLayout.cshtml";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Content("~/Controlsystem/Mainpage")">Главная</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="#">Список заказов</a>
        </li>
    </ul>
</div>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-user"></i> Заказщики</h2>           
        </div>
        <div class="box-content">

            <div class="control-group">
                @Html.ValidationSummary()

                @if (TempData["message"] != null)
                {
                    <div class="alert alert-info"><p>@TempData["message"]</p></div>
                }
            </div>
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th scope="col">№ заказа</th>
                        <th scope="col">Дата заказа</th>
                        <th scope="col">Покупатель</th>
                        
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td class="center">@item.ShippingID</td>
                        <td class="center">@item.DateAdded</td>
                        <td class="center">@item.Name</td>


                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><!--/span-->
</div><!--/row-->
