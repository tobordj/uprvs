@model IEnumerable<uh365898_db.Domain.Entities.Producer>

@{
    ViewBag.Title = "Административная панель: все производители товара";
    Layout = "~/Views/Shared/_ControlsystemLayout.cshtml";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="@Url.Content("~/Controlsystem/Mainpage")">Главная</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="#">Производители товара</a>
        </li>
    </ul>
</div>

<div class="row-fluid sortable ui-sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-th-list"></i>Производители товара</h2>

        </div>

        <div class="box-content">
            <div class="control-group">
                <a class="btn" href="@Url.Action("Fabricator", "Controlsystem")"><i class="icon-plus"></i> Добавить производителя</a>
                @Html.ValidationSummary()

                @if (TempData["message"] != null)
                {
                    <div class="alert alert-info"><p>@TempData["message"]</p></div>
                }
            </div>



            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th scope="col">№</th>
                        <th scope="col">Название</th>
                        <th scope="col"></th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-center">@item.ProducerID</td>
                            <td class="align-center">@item.Name</td>
                           


                            <td>
                                @using (Html.BeginForm("Delfabric", "Controlsystem"))
                                {
                                    @Html.Hidden("ProducerID", item.ProducerID)  <button class="btn btn-mini btn-danger" type="submit"><i class="icon-remove icon-white"></i></button>                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>
</div>

