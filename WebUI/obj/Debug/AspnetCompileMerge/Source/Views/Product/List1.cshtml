    <div class="row-fluid">
           
       

            <!--Каталог товаров из бд -->
          <div id="options">
            <div class="social-box">

                @if (Model.CurrentCategory == null)
                {
                    <div class="header"><span class="icon32  icon-arrowstop-e"></span>Рекомендуем</div>

                }

                @if (Model.CurrentCategory != null)
                {
                    <div class="header">
                        <span class="icon32  icon-arrowstop-e"></span><a href="@Url.Content("~/Product/Catalog")">Каталог товаров: </a>


                        ​<a>

                            @Html.DisplayFor(x => x.CurrentCategory)
                        </a>
                    </div>
                }

            </div>
            </div>





            <div class="projects" style="left:0px;">

                @foreach (var p  in Model.Products)
                {
                    Html.RenderPartial("ProductSummary", p);
                }
            </div>

        </div>





      <div class="row-fluid">

            <div class="span12">
                <!-- нумерация страниц-->
                @if (Model.CurrentCategory != null)
                {
                    <div class="row-fluid">
                        <div class="span9">
                            <div class="pager">
                                @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x, category = Model.CurrentCategory }))
                            </div>
                        </div>
                    </div>
                }


            </div>

